<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222526"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/btnCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#CCCBCB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDip">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:background="#0F0F0F">


            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="7"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#51B655"
                android:text="8"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="9"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="/"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0F0F">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="4"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="5"
                android:textColor="#EBF0F2"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="6"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="*"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0F0F">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="1"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="2"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="3"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="-"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0F0F">

            <Button
                android:id="@+id/btnclr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="Del"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="0"
                tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="="
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#3F51B5"
                android:text="+"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/viewDip"
        android:layout_width="381dp"
        android:layout_height="133dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="16dp"
        android:background="#0F0F0F"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#4CAF50"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>